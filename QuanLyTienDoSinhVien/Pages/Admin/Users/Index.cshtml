@page
@model QuanLyTienDoSinhVien.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "Quản Lý Người Dùng";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="bi bi-people-fill"></i> Quản Lý Người Dùng</h2>
        </div>
        <div class="col-md-6 text-end">
            <a href="/Admin/Users/Create" class="btn btn-success">
                <i class="bi bi-person-plus-fill"></i> Tạo Tài Khoản Mới
            </a>
            <a href="/Admin/Dashboard" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay Lại
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="searchTerm" class="form-label">Tìm Kiếm</label>
                    <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                           value="@Model.SearchTerm" placeholder="Tên đăng nhập...">
                </div>
                <div class="col-md-3">
                    <label for="roleFilter" class="form-label">Vai Trò</label>
                    <select class="form-select" id="roleFilter" name="roleFilter">
                        <option value="">Tất cả</option>
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role.Id" selected="@(Model.RoleFilter == role.Id)">@role.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="statusFilter" class="form-label">Trạng Thái</label>
                    <select class="form-select" id="statusFilter" name="statusFilter">
                        <option value="">Tất cả</option>
                        <option value="active" selected="@(Model.StatusFilter == "active")">Hoạt động</option>
                        <option value="inactive" selected="@(Model.StatusFilter == "inactive")">Khóa</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Tìm
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Danh Sách Người Dùng (@Model.Users.Count)</h5>
        </div>
        <div class="card-body">
            @if (Model.Users != null && Model.Users.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Tên Đăng Nhập</th>
                                <th>Vai Trò</th>
                                <th>Trạng Thái</th>
                                <th>Đăng Nhập Thất Bại</th>
                                <th>Đăng Nhập Cuối</th>
                                <th>Ngày Tạo</th>
                                <th>Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>@user.Id</td>
                                    <td><strong>@user.Username</strong></td>
                                    <td>
                                        <span class="badge bg-@(user.Role.Name == "Admin" ? "danger" : user.Role.Name == "Lecturer" || user.Role.Name == "Teacher" ? "info" : "success")">
                                            @user.Role.Name
                                        </span>
                                    </td>
                                    <td>
                                        @if (user.IsActive == true)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Hoạt động
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-lock-fill"></i> Khóa
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.FailedLogin > 0)
                                        {
                                            <span class="badge bg-warning text-dark">@user.FailedLogin</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">0</span>
                                        }
                                    </td>
                                    <td>@(user.LastLogin?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa đăng nhập")</td>
                                    <td>@user.CreatedAt?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/Admin/Users/Edit?id=@user.Id" class="btn btn-sm btn-warning" title="Chỉnh sửa">
                                                <i class="bi bi-pencil-fill"></i>
                                            </a>
                                            @if (user.Username != "admin")
                                            {
                                                <a href="/Admin/Users/Delete?id=@user.Id" class="btn btn-sm btn-danger" title="Xóa">
                                                    <i class="bi bi-trash-fill"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Không tìm thấy người dùng nào.
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}
