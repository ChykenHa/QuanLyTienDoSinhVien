@page
@model QuanLyTienDoSinhVien.Pages.Admin.Users.EditModel
@{
    ViewData["Title"] = "Chỉnh Sửa Tài Khoản";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-pencil-fill"></i> Chỉnh Sửa Tài Khoản</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post">
                        <input type="hidden" asp-for="Input.UserId" />

                        <div class="mb-3">
                            <label class="form-label">Tên Đăng Nhập</label>
                            <input type="text" class="form-control" value="@Model.Input.Username" disabled />
                            <small class="form-text text-muted">Tên đăng nhập không thể thay đổi.</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Vai Trò</label>
                            <input type="text" class="form-control" value="@Model.CurrentRole" disabled />
                            <small class="form-text text-muted">Vai trò không thể thay đổi.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.NewPassword" class="form-label">
                                Mật Khẩu Mới
                            </label>
                            <div class="input-group">
                                <input asp-for="Input.NewPassword" class="form-control" placeholder="Để trống nếu không đổi mật khẩu" />
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                    <i class="bi bi-eye" id="toggleIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                            <small class="form-text text-muted">Để trống nếu không muốn thay đổi mật khẩu.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label">
                                Xác Nhận Mật Khẩu Mới
                            </label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu mới" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="Input.IsActive" class="form-check-input" />
                                <label asp-for="Input.IsActive" class="form-check-label">
                                    Tài khoản đang hoạt động
                                </label>
                            </div>
                            <small class="form-text text-muted">Bỏ chọn để khóa tài khoản.</small>
                        </div>

                        @if (Model.CurrentRole == "Student" && Model.StudentInfo != null)
                        {
                            <div class="card mb-3 border-success">
                                <div class="card-header bg-success text-white">
                                    <h6 class="mb-0">Thông Tin Sinh Viên</h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label class="form-label">Mã Sinh Viên</label>
                                        <input type="text" class="form-control" value="@Model.StudentInfo.StudentCode" disabled />
                                        <small class="form-text text-muted">Mã sinh viên không thể thay đổi.</small>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Input.FullName" class="form-label">Họ và Tên</label>
                                        <input asp-for="Input.FullName" class="form-control" />
                                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Input.Email" class="form-label">Email</label>
                                        <input asp-for="Input.Email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Input.Phone" class="form-label">Số Điện Thoại</label>
                                        <input asp-for="Input.Phone" class="form-control" />
                                        <span asp-validation-for="Input.Phone" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Input.ClassId" class="form-label">Lớp</label>
                                        <select asp-for="Input.ClassId" class="form-select">
                                            <option value="">-- Chọn lớp --</option>
                                            @foreach (var cls in Model.Classes)
                                            {
                                                <option value="@cls.Id">@cls.Name</option>
                                            }
                                        </select>
                                        <span asp-validation-for="Input.ClassId" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Input.Address" class="form-label">Địa Chỉ</label>
                                        <textarea asp-for="Input.Address" class="form-control" rows="2"></textarea>
                                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        }

                        @if ((Model.CurrentRole == "Lecturer" || Model.CurrentRole == "Teacher") && Model.LecturerInfo != null)
                        {
                            <div class="card mb-3 border-info">
                                <div class="card-header bg-info text-white">
                                    <h6 class="mb-0">Thông Tin Giảng Viên</h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label asp-for="Input.FullName" class="form-label">Họ và Tên</label>
                                        <input asp-for="Input.FullName" class="form-control" />
                                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Input.Email" class="form-label">Email</label>
                                        <input asp-for="Input.Email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Input.Phone" class="form-label">Số Điện Thoại</label>
                                        <input asp-for="Input.Phone" class="form-control" />
                                        <span asp-validation-for="Input.Phone" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label">Số Lần Đăng Nhập Thất Bại</label>
                            <div class="input-group">
                                <input type="text" class="form-control" value="@Model.FailedLoginCount" disabled />
                                @if (Model.FailedLoginCount > 0)
                                {
                                    <button type="submit" asp-page-handler="ResetFailedLogin" class="btn btn-warning">
                                        <i class="bi bi-arrow-clockwise"></i> Đặt Lại
                                    </button>
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Đăng Nhập Cuối</label>
                            <input type="text" class="form-control" value="@(Model.LastLogin?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa đăng nhập")" disabled />
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/Admin/Users/Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Hủy
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> Cập Nhật
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Toggle password visibility
        document.getElementById('togglePassword').addEventListener('click', function () {
            const passwordInput = document.getElementById('Input_NewPassword');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('bi-eye');
                toggleIcon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('bi-eye-slash');
                toggleIcon.classList.add('bi-eye');
            }
        });
    </script>
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}
